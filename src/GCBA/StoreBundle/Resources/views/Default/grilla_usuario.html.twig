        <script language="JAVASCRIPT">
            function addPerfil(id,perfil)
            { 
                url="{{ path('gcba_usuario_addperfil') }}";
                $.get( url+ '?id='+id+'&perfil='+perfil, function(data) {
                    if (data=="NP")
                    {
                        alert('permiso denegado');
                    }
                    verInfoUsuario(id);

                }); 

            }

            function delPerfil(id,perfil)
            {
                url='{{ path('gcba_usuario_delperfil') }}';   
                $.get( url+'?id='+id+'&perfil='+perfil, function(data) {
                    if (data=="NP")
                    {
                        alert('permiso denegado');
                    }
                    verInfoUsuario(id);

                });

            } 


            function verInfoUsuario(id)
            {

                url='{{ path('gcba_usuario_verinfo') }}';  
                $.get(url+'?id='+id, function(data) { 


                    if (id>0)
                    {

                        if(!document.getElementById('tr_usuario_info_' + id )){


                            var tr=document.getElementById('tr_usuario_' + id);
                            var tr_info=document.createElement('tr');
                            tr_info.id='tr_usuario_info_' + id; 
                            tr_info.innerHTML =data;
                            tr_info.colSpan=10; 


                            tr.parentNode.insertBefore( tr_info, tr.nextSibling );

                        }
                        else
                        {
                            var tr_info=document.getElementById('tr_usuario_info_' + id) 

                            tr_info.innerHTML =data; 

                        }








                    }
                });   









            }

        </script>   
